---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title?: string;
}

const { title = "Welcome to Neil's City" } = Astro.props;
---

<BaseLayout title={title}>
  <div class="city-wrapper">
    <header class="city-header">
      <h1 class="sr-only">Neil's City</h1>
      <nav class="city-nav" aria-label="Main navigation">
        <slot name="navigation" />
      </nav>
    </header>
    
    <main class="city-main">
      <slot />
    </main>
    
    <footer class="city-footer">
      <slot name="footer" />
    </footer>
  </div>
</BaseLayout>

<style>
  .city-wrapper {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  
  .city-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: var(--z-sticky);
    padding: var(--space-4);
  }
  
  .city-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: var(--max-w-7xl);
    margin: 0 auto;
  }
  
  .city-main {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .city-footer {
    padding: var(--space-4);
    text-align: center;
  }
</style>
